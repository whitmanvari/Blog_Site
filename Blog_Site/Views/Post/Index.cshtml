@* Views/Post/Index.cshtml *@
@using Blog_Site.Models.Concrete
@model IEnumerable<Blog_Site.Models.Concrete.Post>

@{
    ViewData["Title"] = "Blog Yazıları";
}
<form asp-controller="Post" asp-action="Index" method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Ara...">
        <button class="btn btn-outline-secondary" type="submit">Ara</button>
    </div>
</form>


<div class="container mt-5">
    <h1 class="mb-4">Blog Yazıları</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Yazı Ekle</a>
    </p>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Başlık</th>
                <th scope="col">İçerik</th>
                <th scope="col">Yayın Tarihi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@post.Content</td>
                    <td>@post.PublishedDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm btn-info">Detay</a>
                        <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-sm btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>