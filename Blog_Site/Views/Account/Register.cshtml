@model Blog_Site.ModelView.ModelViews
@{
    ViewData["Title"] = "Kayıt Ol";
}

@section Styles {
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="row g-3">
                <div class="col-md-6">
                    <h2 class="mb-3">Kullanıcı Olarak Kayıt Ol</h2>
                    <form asp-action="RegisterUser" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="mb-3">
                            <label asp-for="UserRegister.UserName" class="form-label">Kullanıcı Adı</label>
                            <input asp-for="UserRegister.UserName" class="form-control" />
                            <span asp-validation-for="UserRegister.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserRegister.Email" class="form-label">E-posta</label>
                            <input asp-for="UserRegister.Email" class="form-control" type="email" />
                            <span asp-validation-for="UserRegister.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserRegister.Password" class="form-label">Şifre</label>
                            <input asp-for="UserRegister.Password" class="form-control" type="password" />
                            <span asp-validation-for="UserRegister.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserRegister.ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="UserRegister.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="UserRegister.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>
                </div>

                <div class="col-md-6 border-start ps-4">
                    <h2 class="mb-3">Yazar Olarak Kayıt Ol</h2>
                    <form asp-action="RegisterAdmin" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="mb-3">
                            <label asp-for="AdminRegister.Name" class="form-label">Ad Soyad</label>
                            <input asp-for="AdminRegister.Name" class="form-control" />
                            <span asp-validation-for="AdminRegister.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdminRegister.Email" class="form-label">E-posta</label>
                            <input asp-for="AdminRegister.Email" class="form-control" type="email" />
                            <span asp-validation-for="AdminRegister.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdminRegister.Password" class="form-label">Şifre</label>
                            <input asp-for="AdminRegister.Password" class="form-control" type="password" />
                            <span asp-validation-for="AdminRegister.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AdminRegister.ConfirmPassword" class="form-label">Şifre Tekrar</label>
                            <input asp-for="AdminRegister.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="AdminRegister.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Yazar Kaydı</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login" class="link-primary">Zaten hesabın var mı? Giriş yap</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
