@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">BlogApp</a>

                <div class="navbar-links">
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        <a asp-controller="Post" asp-action="Index">Yazılar</a>
                        <a asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Giriş</a>
                        <a asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container body-content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container text-center">
            <p>BlogApp © 2025 - Tüm hakları saklıdır.</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
