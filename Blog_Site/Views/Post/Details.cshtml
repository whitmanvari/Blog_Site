
@model Blog_Site.Models.Concrete.Post

@{
    ViewData["Title"] = "Yazı Detayları";
}

<div class="container mt-5">
    <h1>Yazı Detayları</h1>
    <hr />
    <div>
        <dl class="row">
            <dt class="col-sm-2">Başlık</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-2">İçerik</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Content)</dd>

            <dt class="col-sm-2">Yayın Tarihi</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.PublishedDate)</dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</div>
<div class="container mt-5">
    <h2>Yorumlar</h2>

    @* Comment list *@
    @if (Model.Comments.Any())
    {
        <ul class="list-group mb-4">
            @foreach (var comment in Model.Comments.OrderByDescending(c => c.Id))
            {
                <li class="list-group-item">
                    <h6 class="mb-1">@comment.AuthorName</h6>
                    <small class="text-muted">@comment.PostedDate.ToShortDateString()</small>
                    <p class="mb-0">@comment.Content</p>
                </li>
            }
        </ul>
    }
    else
    {
        <p>Henüz bu yazıya yorum yapılmadı. İlk yorumu siz yapın!</p>
    }

    <h3>Yeni Yorum Yap</h3>
    <form asp-action="AddComment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="@Model.Id" name="PostId" />

        <div class="form-group mb-3">
            <label class="control-label">Adınız</label>
            <input name="AuthorName" class="form-control" />
        </div>

        <div class="form-group mb-3">
            <label class="control-label">Yorumunuz</label>
            <textarea name="Content" class="form-control" rows="4"></textarea>
        </div>

        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary" />
        </div>
    </form>
</div>